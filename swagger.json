{
  "openapi": "3.0.0",
  "info": {
    "title": "Medical Laboratory API",
    "description": "API for managing medical laboratory operations, samples, and results",
    "version": "1.0.0",
    "contact": {
      "name": "API Support",
      "email": "support@medlab.com"
    }
  },
  "servers": [
    {
      "url": "/api/v1",
      "description": "Development server"
    }
  ],
  "tags": [
    {
      "name": "Authentication",
      "description": "User authentication and management"
    },
    {
      "name": "Roles",
      "description": "User role management"
    },
    {
      "name": "Permissions",
      "description": "Permission management"
    },
    {
      "name": "Labs",
      "description": "Laboratory management"
    },
    {
      "name": "Subscriptions",
      "description": "Subscription plan management"
    },
    {
      "name": "Samples",
      "description": "Medical sample management"
    },
    {
      "name": "Sample Media",
      "description": "Media attachments for samples"
    },
    {
      "name": "Notifications",
      "description": "Sample notifications"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": false
          },
          "message": {
            "type": "string"
          },
          "errors": {
            "type": "array",
            "items": {
              "type": "object"
            }
          }
        }
      },
      "SignupRequest": {
        "type": "object",
        "required": ["name", "email", "password", "phone"],
        "properties": {
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "john@example.com"
          },
          "password": {
            "type": "string",
            "format": "password",
            "example": "securePassword123"
          },
          "phone": {
            "type": "string",
            "example": "+201234567890"
          },
          "defLanguage": {
            "type": "string",
            "enum": ["en", "ar"],
            "example": "en"
          },
          "fcmToken": {
            "type": "string"
          },
          "country": {
            "type": "object",
            "properties": {
              "code": {
                "type": "string",
                "example": "EG"
              }
            }
          },
          "city": {
            "type": "string",
            "example": "Cairo"
          },
          "state": {
            "type": "string",
            "example": "Cairo"
          },
          "postalCode": {
            "type": "integer",
            "example": 12345
          }
        }
      },
      "SigninRequest": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "john@example.com"
          },
          "password": {
            "type": "string",
            "format": "password",
            "example": "securePassword123"
          }
        }
      },
      "VerifyRequest": {
        "type": "object",
        "required": ["email", "code"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "john@example.com"
          },
          "code": {
            "type": "string",
            "example": "123456"
          }
        }
      },
      "ResendCodeRequest": {
        "type": "object",
        "required": ["email"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "john@example.com"
          }
        }
      },
      "LabRequest": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "lab@example.com"
          },
          "password": {
            "type": "string",
            "format": "password",
            "example": "securePassword123"
          },
          "phone": {
            "type": "string",
            "example": "+201234567890"
          },
          "address": {
            "type": "string",
            "example": "123 Main St, Cairo"
          },
          "subscription_id": {
            "type": "string",
            "example": "a1b2c3d4-e5f6-g7h8-i9j0-k1l2m3n4o5p6"
          }
        }
      },
      "SubscriptionRequest": {
        "type": "object",
        "required": ["subscription_name"],
        "properties": {
          "subscription_name": {
            "type": "string",
            "example": "Premium Plan"
          },
          "subscription_price": {
            "type": "string",
            "example": "199.99"
          },
          "subscription_duration": {
            "type": "string",
            "example": "12 months"
          }
        }
      },
      "SampleRequest": {
        "type": "object",
        "required": ["user_name", "lap_id"],
        "properties": {
          "user_name": {
            "type": "string",
            "example": "Patient Name"
          },
          "user_email": {
            "type": "string",
            "format": "email",
            "example": "patient@example.com"
          },
          "user_phone": {
            "type": "string",
            "example": "+201234567890"
          },
          "description": {
            "type": "string",
            "example": "Blood test for glucose levels"
          },
          "lap_id": {
            "type": "string",
            "example": "a1b2c3d4-e5f6-g7h8-i9j0-k1l2m3n4o5p6"
          }
        }
      },
      "SampleUpdateRequest": {
        "type": "object",
        "properties": {
          "user_name": {
            "type": "string",
            "example": "Updated Patient Name"
          },
          "user_email": {
            "type": "string",
            "format": "email",
            "example": "patient2@example.com"
          },
          "user_phone": {
            "type": "string",
            "example": "+201234567891"
          },
          "description": {
            "type": "string",
            "example": "Updated description"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "in progress", "completed", "failed", "cancelled"],
            "example": "in progress"
          },
          "result": {
            "type": "string",
            "example": "Normal glucose levels detected"
          }
        }
      },
      "NotificationRequest": {
        "type": "object",
        "required": ["sample_id", "notification_name"],
        "properties": {
          "sample_id": {
            "type": "string",
            "example": "a1b2c3d4-e5f6-g7h8-i9j0-k1l2m3n4o5p6"
          },
          "notification_name": {
            "type": "string",
            "example": "Result Ready"
          },
          "notification_description": {
            "type": "string",
            "example": "Your test results are ready for review"
          }
        }
      },
      "RoleRequest": {
        "type": "object",
        "required": ["key", "title"],
        "properties": {
          "key": {
            "type": "string",
            "example": "technician"
          },
          "title": {
            "type": "string",
            "example": "Lab Technician"
          },
          "description": {
            "type": "string",
            "example": "Handles lab tests and samples"
          },
          "permissions": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "example": ["view_samples", "create_results"]
          }
        }
      },
      "RoleUpdateRequest": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "example": "Senior Lab Technician"
          },
          "description": {
            "type": "string",
            "example": "Senior role for handling lab tests"
          },
          "permissions": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "example": ["view_samples", "create_results", "approve_results"]
          }
        }
      }
    },
    "responses": {
      "Success": {
        "description": "Successful operation",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "example": true
                },
                "message": {
                  "type": "string"
                },
                "data": {
                  "type": "object"
                }
              }
            }
          }
        }
      },
      "Unauthorized": {
        "description": "Authentication required",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "BadRequest": {
        "description": "Bad request",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "NotFound": {
        "description": "Resource not found",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      }
    }
  },
  "paths": {
    "/auth/signup": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Register a new user",
        "description": "Create a new user account in the system",
