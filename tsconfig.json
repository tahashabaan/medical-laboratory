{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node", "express", "jest"]
  },
  "include": ["src/**/*.ts", "./custom.d.ts", "src"],
  "exclude": ["node_modules", "__test__", "src/**/*.test.ts", "test/setup.ts"]
}
